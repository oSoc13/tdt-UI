<!DOCTYPE html>
<html>
    <head>
        <title>{{title}}</title>
        {{ include('header.twig') }}
    </head>
    <body>
        {{ include('navbar.twig') }}
        <div class="container">
            <h1>{{header}}</h1>
            <form action="#" method="post">
                {% form_theme form 'formtemplate.twig' %}
                <div class="formtitle">{{ form_widget(form) }}</div>
                <button type="submit" class="btn">{{button}}</button>
            </form>
        </div>
    </body>
</html>