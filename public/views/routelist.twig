<!DOCTYPE html>
<html>
    <head>
        <title>Routelist</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- Bootstrap -->
        <link href="../assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen">
    </head>
    <body>
        <script src="http://code.jquery.com/jquery.js"></script>
        <script src="../assets/bootstrap/js/bootstrap.min.js"></script>
        {{ include('navbar.twig') }}
        <div class="container">
            <h1>Routes</h1>
            <ul>
                {% for index,route in routes %}
                    <li>
                        <form action="routes/edit" method="post">
                            {{route.documentation}}
                            <input type="hidden" name="oldroute" value="{{index}}">
                            <button class="btn btn-mini" type="submit" name="edit" value="edit">Edit</button> 
                            <button class="btn btn-mini" type="submit" name="remove" value="remove">Remove</button>
                        </form>
                        <ul>
                            <li>Method: {{route.method}}</li>
                            <li>Route: {{route.route}}</li>
                            <li>Controller: {{route.controller}}</li>
                            <li>
                                Users:
                                <ul>
                                    {% for user in route.users %}
                                        <li>{{user}}</li>
                                    {% else %}
                                        No restrictions
                                    {% endfor %}
                                </ul>
                            </li>
                        </ul>
                    </li>

                {% endfor %}
            </ul>
            <a href="routes/edit">Add route</a>
        </div>
  </body>
</html>