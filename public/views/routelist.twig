<!DOCTYPE html>
<html>
    <head>
        <title>Routelist</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- Bootstrap -->
        <link href="../assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen">
    </head>
    <body>
        <script src="http://code.jquery.com/jquery.js"></script>
        <script src="../assets/bootstrap/js/bootstrap.min.js"></script>
        {{ include('navbar.twig') }}
        <div class="container">
            <h1>Routes</h1>
            <ul>
            	{% for routecore in cores %}
                    {% for route in routecore.routes %}
                        <li>{{route.documentation}}
                            <ul>
                                <li>Method: {{route.method}}</li>
                                <li>Route: {{route.route}}</li>
                                <li>Controller: {{route.controller}}</li>
                                <li>
                                    Users:
                                    <ul>
                                        {% for user in route.users %}
                                            <li>{{user}}</li>
                                        {% else %}
                                            No restrictions
                                        {% endfor %}
                                    </ul>
                                </li>
                            </ul>
                        </li>

                    {% endfor %}
            	{% endfor %}
            </ul>
        </div>
  </body>
</html>